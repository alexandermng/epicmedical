<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.asu.cse360s24.DoctorController" stylesheets="@styles.css">

<top>
<HBox alignment="CENTER" spacing="10.0">
	<Label fx:id="docName" text="Generic Doctor" styleClass="title">
    	<HBox.margin>
            <Insets right="200.0"/>
        </HBox.margin>
    </Label>
    
	<Button text="Return to Portal" onAction="#goDoctorPortal" style="-fx-min-width: 150;" />
</HBox>
</top>

<center>
<VBox alignment="CENTER" spacing="10.0">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>
    
    <HBox>
        <!-- TODO: wire up -->
    	<Label fx:id="patientMsgName" text="Patient Name" style="-fx-font-size: 16; -fx-min-width: 200; -fx-padding: 5 5 5 30;" />
    	<Button fx:id="callButton" text="Call" style="-fx-font-size: 12; -fx-min-width: 75;"/>
    </HBox>
    
    <TextArea fx:id="messageArea" promptText="Messages" editable="false" style="-fx-min-height: 200; -fx-min-width: 450; -fx-padding: 5; -fx-background-color: white" />
    
    <HBox alignment="CENTER" spacing="10.0">
    	<TextArea fx:id="messageBox" promptText="Type your message..." style="-fx-font-size: 12; -fx-min-width: 390; -fx-min-height: 50"/>
    	<Button text="Send" onAction="#sendMessage" style="-fx-font-size: 12; -fx-min-width: 50; -fx-min-height: 50" />
    </HBox>

</VBox>
</center>

</BorderPane>