<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.asu.cse360s24.PatientController" stylesheets="@styles.css">
<padding>
	<Insets right="10"/>
</padding>

<top>
<HBox alignment="CENTER" spacing="10.0">

	<Label fx:id="patientName" text="[patient name]" styleClass="title">
    	<HBox.margin>
            <Insets right="340.0"/>
        </HBox.margin>
    </Label>
    
	<Button text="Log Out" onAction="#goHomeLogin" style="-fx-font-size: 12; -fx-min-width: 100;" />
</HBox>
</top>

<center>
<VBox alignment="CENTER" spacing="10.0">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <!-- TODO: wire up -->
    <Label alignment="CENTER" text="View Visits" style="-fx-font-size: 16;  -fx-background-color: white; -fx-font-weight: bold; -fx-min-width: 300; -fx-padding: 10 5 10 5;"/>
    
    <ComboBox fx:id="visitHistory" promptText="Select Visit" style="-fx-font-size: 12;  -fx-min-width: 300;" />
    
    <Label text="No Data" style="-fx-font-size: 16; -fx-background-color: white; -fx-min-height: 400; -fx-min-width: 400; -fx-padding: 10 10 10 10;" />

</VBox>
</center>

<right>
<VBox alignment="CENTER" spacing="10.0">
<VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white;">
    <padding>
        <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
    </padding>
    
    <Label text="Your Providers" style="-fx-font-size: 13; -fx-font-weight: bold;">
    	<VBox.margin>
            <Insets bottom="5.0"/>
        </VBox.margin>
    </Label>
    
    <!-- TODO: wire up -->
    <HBox>
    	<Label text="Doctor:" style="-fx-font-size: 12; -fx-max-width: 75; -fx-min-width: 75;"/>
    	<Label fx:id="patDoctor" text="n/a" style="-fx-font-size: 12; -fx-max-width: 150; -fx-min-width: 150;"/>
    </HBox>
    
    <HBox>
    	<Label text="Nurse:" style="-fx-font-size: 12; -fx-max-width: 75; -fx-min-width: 75;"/>
    	<Label fx:id="patNurse" text="n/a" style="-fx-font-size: 12; -fx-max-width: 150; -fx-min-width: 150;"/>
    </HBox>
    
    <Button alignment="CENTER" text="Send Message" onAction="#goPatientMessages" style="-fx-font-size: 12; -fx-min-width: 75; -fx-padding: 5 5 5 5;">
    	<VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </Button>
    
</VBox>

<VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white;">
    <padding>
        <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
    </padding>

    
    <Label text="Contact Information" style="-fx-font-size: 13; -fx-font-weight: bold;">
    	<VBox.margin>
            <Insets bottom="5.0"/>
        </VBox.margin>
    </Label>
    
    <GridPane alignment="CENTER" hgap="10" vgap="10" style="-fx-padding: 10 10 10 10;">
    	<Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 12;"/>
    	<TextField fx:id="patName" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 12; -fx-max-width: 150; -fx-min-width: 150;"/>
    	<Label text="Address" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 12;"/>
    	<TextField fx:id="patAddress" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 12; -fx-max-width: 150; -fx-min-width: 150;"/>
    	<Label text="Phone Number" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 12;"/>
    	<TextField fx:id="patPhone" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 12; -fx-max-width: 150; -fx-min-width: 150;"/>
    </GridPane>
    
    <Button alignment="CENTER" text="Save" onAction="#saveInfo" style="-fx-font-size: 12; -fx-min-width: 75; -fx-padding: 5 5 5 5;">
    	<VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </Button>
    
</VBox>
</VBox>
</right>

</BorderPane>