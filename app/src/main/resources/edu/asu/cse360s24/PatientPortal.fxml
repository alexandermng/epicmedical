<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.asu.cse360s24.PatientController" stylesheets="@styles.css">
<padding>
	<Insets right="10"/>
</padding>

<top>
<HBox alignment="CENTER" spacing="10.0">
    <!-- TODO: wire up -->
	<Label fx:id="patientName" text="[patient name]" style="-fx-font-size: 24; -fx-min-width: 200;">
    	<HBox.margin>
            <Insets right="200.0"/>
        </HBox.margin>
    </Label>
    
	<Button text="Log Out" onAction="#goHomeLogin" style="-fx-font-size: 12; -fx-min-width: 100;" />
</HBox>
</top>

<center>
<VBox alignment="CENTER" spacing="10.0">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <!-- TODO: wire up -->
    <Button alignment="CENTER" text="View Visit History" style="-fx-font-size: 12;  -fx-min-width: 300;" />
    
    <Label alignment="CENTER" text="Recent Visit" style="-fx-font-size: 16;  -fx-background-color: white; -fx-font-weight: bold; -fx-min-width: 300; -fx-padding: 10 5 10 5;"/>
    
    <Label text="fhwiaofiw" style="-fx-font-size: 16; -fx-background-color: white; -fx-min-height: 200; -fx-min-width: 300; -fx-padding: 10 5 10 5;" />

</VBox>
</center>

<right>
<VBox alignment="CENTER" spacing="10.0">
<VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white;">
    <padding>
        <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
    </padding>
    
    <Label text="Your Providers" style="-fx-font-size: 13; -fx-font-weight: bold;">
    	<VBox.margin>
            <Insets bottom="5.0"/>
        </VBox.margin>
    </Label>
    
    <!-- TODO: wire up -->
    <Label text="Doctor" style="-fx-font-size: 12;"/>
    
    <Label text="Nurse" style="-fx-font-size: 12;"/>
    
    <Button alignment="CENTER" text="Send Message" onAction="#goPatientMessages" style="-fx-font-size: 12; -fx-min-width: 75; -fx-padding: 5 5 5 5;">
    	<VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </Button>
    
</VBox>

<VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white;">
    <padding>
        <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
    </padding>

    <!-- TODO: wire up -->
    
    <Label text="Contact Information" style="-fx-font-size: 13; -fx-font-weight: bold;">
    	<VBox.margin>
            <Insets bottom="5.0"/>
        </VBox.margin>
    </Label>
    
    <Label text="Name" style="-fx-font-size: 12;"/>
    
    <Label text="Address" style="-fx-font-size: 12;"/>
    
    <Label text="Phone Number" style="-fx-font-size: 12;"/>
    
    <Label text="Emergency Contact" style="-fx-font-size: 12;"/>
    
    <Button alignment="CENTER" text="Save" onAction="#saveInfo" style="-fx-font-size: 12; -fx-min-width: 75; -fx-padding: 5 5 5 5;">
    	<VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </Button>
    
</VBox>
</VBox>
</right>

</BorderPane>