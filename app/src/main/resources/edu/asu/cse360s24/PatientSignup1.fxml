<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.asu.cse360s24.PatientController" stylesheets="@styles.css">

<top>
<VBox alignment="CENTER">
	<Label text="Patient Signup" style="-fx-font-size: 24;"/>
</VBox>
</top>

<center>
<GridPane alignment="CENTER" hgap="10" vgap="10" style="-fx-padding: 10 10 10 10;">
	<!-- TODO: wire up -->
	<TextField fx:id="FirstName" promptText="First Name"  GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 12; -fx-min-width: 150;"/>
	<TextField fx:id="LastName" promptText="Last Name" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 12; -fx-min-width: 150;"/>
	<TextField fx:id="Username" promptText="Username" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 12; -fx-min-width: 150;"/>
	<PasswordField fx:id="Password" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 12; -fx-min-width: 150;"/>
	<TextField fx:id="PhoneNum" promptText="Phone Number" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 12; -fx-min-width: 150;"/>
	<DatePicker fx:id="Birthdate" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
</GridPane>
</center>

<bottom>
<VBox alignment="CENTER">
	<Button text="Continue" onAction="#patientSignup2" style="-fx-font-size: 12; -fx-min-width: 100; -fx-min-height: 50"/>
</VBox>
</bottom>

</BorderPane>