<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.asu.cse360s24.LoginViewController" style="-fx-background-color: lavender; -fx-padding: 10 10 10 10;">

<top>
<VBox alignment="CENTER">
	<Label text="[patient name]" style="-fx-font-size: 16;"/>
</VBox>
</top>

<center>
<HBox alignment="CENTER" spacing="20.0">
<GridPane hgap="10" vgap="10" style="-fx-padding: 70 10 10 10;">
	<TextField promptText="Weight"  GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 12; -fx-min-width: 90;"/>
	<TextField promptText="Height" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 12; -fx-min-width: 90;"/>
	<TextField promptText="Body Tempterature" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 12; -fx-min-width: 90;"/>
	<TextField promptText="Blood Pressure" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 12; -fx-min-width: 90;"/>
	<TextField promptText="Known Allergies" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 12; -fx-min-width: 90; -fx-min-height: 100;"/>
	<TextField promptText="Patient Concerns" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 12; -fx-min-width: 90; -fx-min-height: 100;"/>
</GridPane>
<VBox spacing="5.0">
	<Label text="Previous Health Issues:" style="-fx-font-size: 12; -fx-min-width: 100; -fx-min-height: 75;"/>
	<Label text="Prescription History:" style="-fx-font-size: 12; -fx-min-width: 100; -fx-min-height: 75;"/>
	<Label text="Immunization History:" style="-fx-font-size: 12; -fx-min-width: 100; -fx-min-height: 75;"/>
	<Label text="Recommendations:" style="-fx-font-size: 12; -fx-min-width: 100; -fx-min-height: 75;"/>
</VBox>
</HBox>
</center>

<bottom>
<VBox alignment="CENTER">
	<Button text="Send to Doctor" onAction="#nursePortal" style="-fx-font-size: 12; -fx-min-width: 150; -fx-min-height: 30"/>
</VBox>
</bottom>

</BorderPane>