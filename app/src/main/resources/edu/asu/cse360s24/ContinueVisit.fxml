<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.asu.cse360s24.DoctorController" stylesheets="@styles.css">

<top>
<VBox alignment="CENTER">
	<!-- TODO: wire up -->
	<Label text="[patient name]" style="-fx-font-size: 16;"/>
</VBox>
</top>

<center>
<HBox alignment="CENTER" spacing="20.0">
<GridPane hgap="10" vgap="10" style="-fx-padding: 40 10 10 10;">
	<!-- TODO: wire up with fx:id -->
	<TextField promptText="Examination Notes" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 12; -fx-min-width: 300; -fx-min-height: 100;"/>
	<TextField promptText="Recommendations" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 12; -fx-min-width: 300; -fx-min-height: 100;"/>
	<HBox  GridPane.columnIndex="0" GridPane.rowIndex="2" spacing="10.0">
		<TextField promptText="Prescription" style="-fx-font-size: 12; -fx-min-width: 200; -fx-min-height: 30;"/>
		<Button text="Send" onAction="#sendPrescription" style="-fx-font-size: 12; -fx-min-width: 90; -fx-min-height: 30;"/>
	</HBox>
</GridPane>
<VBox spacing="5.0">
	<Label text="Previous Health Issues:" style="-fx-font-size: 12; -fx-min-width: 100; -fx-min-height: 75;"/>
	<Label text="Prescription History:" style="-fx-font-size: 12; -fx-min-width: 100; -fx-min-height: 75;"/>
	<Label text="Immunization History:" style="-fx-font-size: 12; -fx-min-width: 100; -fx-min-height: 75;"/>
	<Label text="Recommendations:" style="-fx-font-size: 12; -fx-min-width: 100; -fx-min-height: 75;"/>
</VBox>
</HBox>
</center>

<bottom>
<VBox alignment="CENTER">
	<Button text="End Visit" onAction="#endVisit" style="-fx-font-size: 12; -fx-min-width: 150; -fx-min-height: 30"/>
</VBox>
</bottom>

</BorderPane>